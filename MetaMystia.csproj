<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>14</LangVersion>
    <AssemblyName>MetaMystia</AssemblyName>
    <Product>MetaMystia</Product>
    <Version>0.15.1</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RestoreAdditionalProjectSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.bepinex.dev/v3/index.json
    </RestoreAdditionalProjectSources>
    <RootNamespace>MetaMystia</RootNamespace>
    <GamePath>D:\SteamLibrary\steamapps\common\Touhou Mystia Izakaya</GamePath>
    <!-- <GamePath>E:\Desktop\Touhou Mystia Izakaya</GamePath> -->
    <OutputPath>$(GamePath)\BepInEx\plugins</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <Target Name="RenameBuildOutput" AfterTargets="Build">
    <PropertyGroup>
      <RenamedAssembly>$(AssemblyName)-v$(Version)</RenamedAssembly>
      <RenamedAssemblyPath>$(OutputPath)$(RenamedAssembly)</RenamedAssemblyPath>
    </PropertyGroup>
    <Move SourceFiles="$(TargetPath)" DestinationFiles="$(RenamedAssemblyPath)$(TargetExt)" />
    <Message Text="Renamed $(TargetPath) to $(RenamedAssemblyPath)$(TargetExt)" Importance="High" />
  </Target>

  <Target Name="CopyToExtraOutputPaths" AfterTargets="Build" DependsOnTargets="RenameBuildOutput">
    <ItemGroup>
      <ExtraOutputPaths Include="D:\Touhou Mystia Izakaya v4.3.0\BepInEx\plugins" />
    </ItemGroup>
    <Copy SourceFiles="$(RenamedAssemblyPath)$(TargetExt)" DestinationFolder="@(ExtraOutputPaths)" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(TargetDir)$(AssemblyName).pdb" DestinationFolder="@(ExtraOutputPaths)" SkipUnchangedFiles="true" />
    <Message Text="Copied $(RenamedAssemblyPath)$(TargetExt) to @(ExtraOutputPaths)" Importance="High" />
  </Target>

  <ItemGroup>
    <None Include="Patches\Native\Runtime\MinHook.x64.dll">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Patches\Native\Runtime\MinHook.x64.dll" />
    <EmbeddedResource Include="Debugger\login.html" />
    <EmbeddedResource Include="Debugger\index.html" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="LogGenerator\LogGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>
  <ItemGroup>
